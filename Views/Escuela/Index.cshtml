@model Escuela
@{
    ViewData["Title"] = "Información escuela";
    Layout = "Simple";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a la escuela</h1>
    <p>Espero que el vistazo por mi escuela te sea de agrado!</p>
</div>
<div>
    <h1>@ViewData["title"]</h1>
    <h2>Nombre: @Model.Nombre</h2>
    <h3>Tipo de escuela: @Model.TipoEscuela</h3>
    <p> <strong>Año de fundación: @Model.AñoDeCreación</strong></p>
    <address>
        <p>Dirección: @Model.Dirección </p>
        <p>País: @Model.Pais</p>
        <p>Ciudad: @Model.Ciudad</p>
    </address>

    <p><i>@ViewData["CosaDimanica"] </i></p>
</div>
